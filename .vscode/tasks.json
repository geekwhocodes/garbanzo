{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build-db",
			"platform": "python",
			"dockerBuild": {
				"tag": "dcrdb:latest",
				"dockerfile": "${workspaceFolder}/src/db/Dockerfile",
				"context": "${workspaceFolder}/src/db",
				"pull": false
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: db",
			"dependsOn": [
				"docker-build-db"
			],
			"dockerRun": {
				"image": "dcrdb:latest",
				"containerName": "dcrdb",
				"command": "",
				"env": {
					"POSTGRES_USER": "postgres",
					"POSTGRES_PASSWORD":"postgres"
				},
				"ports": [
					{
						"containerPort": 5432
					}
				]
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build-app",
			"platform": "python",
			"dockerBuild": {
				"tag": "dcrapi:latest",
				"dockerfile": "${workspaceFolder}/src/Dockerfile",
				"context": "${workspaceFolder}/src",
				"pull": false
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build-app",
				"docker-run: db"
			],
			"python": {
				"args": [
					"app.main:app",
					"--host",
					"0.0.0.0",
					"--port",
					"8000" 
				],
				"module": "uvicorn"
			},
			"dockerRun": {
				"ports": [
					{
						"containerPort": 8000,
						"hostPort": 8001
					}
				]
			}
		}
	]
}