{
    "configurations": [
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "removeContainerAfterDebug": true,
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}/src",
                        "remoteRoot": "/usr/src/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ]
}